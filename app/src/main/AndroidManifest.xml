<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gpssa.gpstoque">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GPSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DebugActivity" />
        <activity
            android:name=".ApplicationIndex"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".RequestsActivity"
            android:label="@string/title_activity_requests" />
        <activity android:name=".DashboardActivity" />
        <activity
            android:name=".UniformActivity"
            android:parentActivityName=".ApplicationIndex"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".UniformCadastroActivity"></activity>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>